- extends 'application.html.haml'
- load bootstrap

- block content
  .row
    .col-md-12
      .page-header.text-center
        %h1 Please login to use this application!
  .row
    .col-md-6.col-md-offset-3
      .panel.panel-primary
        .panel-heading Login
        .panel-body
          %form{ role: 'form', method: 'post' }
            - csrf_token
            = form|bootstrap
            %button.btn.btn-success{ type: 'submit' }
              Sign in
