- extends 'application.html.haml'

- block content
  .row
    .col-md-12
      .page-header
        %h1
          Storages({{storages.count}})
          %a.pull-right.btn.btn-primary{ href: "{% url 'storages_new' %}" }
            Add
        .text-muted
          You can use any of those already created storages.
          If you need additional storages, please add them
    .row
      .col-md-12
        %table.table.table-striped.table-hover#storages-table
          %thead
            %th No
            %th Name
            %th In
            %th Actions


          %tbody
            - for storage in storages
              %tr
                %td= forloop.counter
                %td= storage.name
                %td
                  = storage.space.name
                  .text-muted
                    = storage.space.description
                %td
                  .btn-group
                    %a.btn.btn-success{ href: "{% url 'storages_show' storage.id %}" }
                      .fa.fa-eye
                    %a.btn.btn-primary{ href: ' ' }
                      .fa.fa-edit
                    %a.btn.btn-danger{ href: ' ' }
                      .fa.fa-times
