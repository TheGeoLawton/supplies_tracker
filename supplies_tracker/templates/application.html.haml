- load bootstrap3
- load staticfiles

-# Incllude fontawesome icons
%link{ rel: 'stylesheet', href: "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", integrity: "sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin: 'anonymous' }
-# Include css files
%link{ rel: 'stylesheet', href: "{% static 'css/layout.css' %}" }

%html
  %head
    - bootstrap_css
    - bootstrap_messages

    %title Supplies Tracker
  %body
    %nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          %button.navbar-toggle.collapsed{ type: 'button', 'data-toggle': 'collapse', 'data-target': '#menutoggle', 'aria-expanded': false }
            %span.sr-only
              Toggle Navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{ href: "{% url 'home' %}" }
            Home
        .collapse.navbar-collapse#menutoggle
          %ul.nav.navbar-nav
            - if not user.is_anonymous
              %li.active
                %a{ href: "{% url 'spaces_index' %}" } Your spaces
          %ul.nav.navbar-nav.navbar-right
            - if user.is_anonymous
              %li
                %a{ href: "{% url 'login' %}" }
                  Sign in
              %li
                %a{ href: "{% url 'signup' %}" } Sign up
            - else
              %li
                %a{ href: "{% url 'logout' %}" }
                  .fa.fa-envelope
                  Logout
              %li
                %a{ href: '#' }
                  .fa.fa-user
                  User Profile

    .container#content
      .row
        .col-md-12
          - block content
